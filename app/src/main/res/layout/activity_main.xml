<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/sum_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/c_call_java"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C调Java"/>

    <Button
        android:id="@+id/c_call_java_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C调Java Add"/>

    <Button
        android:id="@+id/c_call_java_addNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C访问java变量"/>

    <Button
        android:id="@+id/c_call_java_static_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C访问java的static变量"/>

</LinearLayout>